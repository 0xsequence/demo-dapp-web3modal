{
  "name": "demo-dapp-web3modal",
  "description": "Ethereum Demo Dapp + Web3Modal built on Sequence stack",
  "version": "0.1.0",
  "private": true,
  "homepage": "demo-dapp-web3modal",
  "scripts": {
    "dev": "BROWSER=none yarn start",
    "start": "PORT=4000 GENERATE_SOURCEMAP=false craco start",
    "build": "BUILD_PATH='./dist' craco build",
    "eject": "react-scripts eject",
    "dist": "yarn build",
    "link-sequence": "yarn link 0xsequence @0xsequence/abi @0xsequence/api @0xsequence/auth @0xsequence/config @0xsequence/guard @0xsequence/multicall @0xsequence/network @0xsequence/provider @0xsequence/relayer @0xsequence/transactions @0xsequence/utils @0xsequence/wallet",
    "unlink-sequence": "yarn unlink 0xsequence @0xsequence/abi @0xsequence/api @0xsequence/auth @0xsequence/config @0xsequence/guard @0xsequence/multicall @0xsequence/network @0xsequence/provider @0xsequence/relayer @0xsequence/transactions @0xsequence/utils @0xsequence/wallet"
  },
  "dependencies": {
    "0xsequence": "^0.43.1",
    "@0xsequence/design-system": "^0.1.107",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.22",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vanilla-extract/css": "^1.9.3",
    "@walletconnect/web3-provider": "^1.8.0",
    "@web3modal/ethereum": "^2.5.0",
    "@web3modal/react": "^2.5.0",
    "ethers": "^5.7.2",
    "framer-motion": "^9.0.1",
    "node-polyfill-webpack-plugin": "^1.1.4",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-scripts": "5.0.0",
    "typescript": "^4.5.5",
    "viem": "^1.1.7",
    "wagmi": "^1.3.0",
    "web-vitals": "^2.1.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@craco/craco": "^7.0.0",
    "@vanilla-extract/webpack-plugin": "^2.2.0"
  }
}
